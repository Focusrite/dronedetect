#include <opencv2/opencv.hpp>
#include <opencv2/imgproc/imgproc.hpp>
#include <iostream>

//using namespace cv;
using namespace std;

bool color_matching(cv::Mat& img)
{
  cv::Mat hsv;
  //cv::GaussianBlur(img, hsv, cv::Size(5, 5), 0);
  //cv::cvtColor(hsv, hsv, cv::COLOR_BGR2HSV);

  cv::Mat mask1, mask2, mask;
  cv::inRange(hsv, cv::Scalar(0, 120, 120), cv::Scalar(10, 255, 255), mask1);
  cv::inRange(hsv, cv::Scalar(170, 120, 120), cv::Scalar(179, 255, 255), mask2);
  cv::addWeighted(mask1, 1.0, mask2, 1.0, 0.0, mask);

}
int main()
{
  std::cout << "TESTING" << std::endl;
  return 0;
}
